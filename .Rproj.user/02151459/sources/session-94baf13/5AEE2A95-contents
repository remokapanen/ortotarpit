bookdown::gitbook:
  css: style.css
  includes:
    after_body: includes/after_body.html
  config:
    toc:
      before: |
        <li><a href="./"></a></li>
      after: |
        <li><a href="https://github.com/rstudio/bookdown" target="blank"></a></li>
    edit: https://github.com/USERNAME/REPO/edit/BRANCH/%s
    download: ["pdf", "epub"]
bookdown::pdf_book:
  includes:
    in_header: preamble.tex
  latex_engine: xelatex
  citation_package: natbib
  keep_tex: yes
bookdown::epub_book: default
